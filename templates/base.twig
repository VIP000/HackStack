<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{% block title %}Welcome to hackstack{% endblock %}</title>
		<link rel="shortcut icon" href="/images/favicon.ico">
		<link rel="stylesheet" href="/css/core/normalize.css">
		<link rel="stylesheet" href="/css/core/bootstrap.min.css">
		<link rel="stylesheet" href="/css/core/components.css">
		<link rel="stylesheet" href="/css/core/simple-line-icons.css">
		<link rel="stylesheet" href="/css/app/core.css">

		<!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
		<!--[if lt IE 9]>
			<script src="/javascript/core/ie/html5shiv.js"></script>
		<![endif]-->

		<!-- IE7 support of the icons font. -->
		<!--[if lte IE 7]>
			<script src="/javascript/core/ie/icons-lte-ie7.js"></script>
		<![endif]-->
	</head>
	<body>
		<div>
			{% block navbar %}
				<nav role="navigation" class="navbar navbar-default">
					<div class="container-fluid">
						<div class="navbar-header">
							<button data-target="#button-sign-in" data-toggle="collapse" class="navbar-toggle" type="button">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
							<a href="/" class="navbar-brand">HackStack</a>
						</div>
						{% if (show_sign_in is not defined) or (show_sign_in != false) %}
							<div id="button-sign-in" class="collapse navbar-collapse navbar-right" style="padding-left: 5px; padding-right: 5px;">
								<form method="GET" action="/{{ ((signed_in is defined) and (signed_in == true)) ? "signout" : "signin" }}" accept-charset="UTF-8">
									{% if (signed_in is defined) and (signed_in == true) %}
										<button class="btn btn-default navbar-btn" type="submit">Sign Out <span class="icon-lock-open" data-icon="&#xe08f;"></span></button>
									{% else %}
										<button class="btn btn-default navbar-btn" type="submit">Sign In <span class="icon-lock" data-icon="&#xe08e;"></span></button>
									{% endif %}
								</form>
							</div>
							{# This block comes after sign in/out because the floats will cause it to appear to the right otherwise #}
							{% if ((signed_in is not defined) or (signed_in != true)) and ((show_sign_up is defined) and (show_sign_up == true)) %}
								<div id="button-sign-in" class="collapse navbar-collapse navbar-right" style="padding-left: 5px; padding-right: 5px;">
									<form method="GET" action="/signup" accept-charset="UTF-8">
										<button class="btn btn-primary navbar-btn" type="submit">Sign Up</button>
									</form>
								</div>
							{% endif %}
						{% endif %}
					</div>
				</nav>
			{% endblock %}
			<div class="container-fluid">
				<div class="row">
					<div class="col-xs-10 col-xs-offset-1">
						{% block content %}{% endblock %}
					</div>
				</div>
			</div>
		</div>
		<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.1.1/js/bootstrap.min.js"></script>
	</body>
</html>