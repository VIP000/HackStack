{% extends "base.twig" %}

{# Turn off the sign in button when already on the sign in page #}
{% set show_sign_in = false %}

{% block title %}Welcome back!{% endblock %}
{% block content %}
<div class="site clearfix">
	<div class="context-loader-container" id="site-container">
		{% if (flash.error is defined) %}
			<div class="error-message alert alert-danger">{{ flash.error }}</div>
		{% endif %}
		<div id="login" class="auth-form">
			<form method="POST" action="/signin" accept-charset="UTF-8">
				<div class="auth-form-header">
					<h1>Sign in</h1>
				</div>
				<div class="auth-form-body">
					<label for="email">Email Address</label>
					<input type="text" tabindex="1" name="email" id="email" class="input-block" autofocus="autofocus" autocapitalize="off">
					<label for="password">Password <a href="/forgot">(forgot password)</a></label>
					<input type="password" tabindex="2" name="password" id="password" class="input-block">
					<input type="submit" value="Sign in" tabindex="3" name="commit" class="button">
					<input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}" />
				</div>
			</form>
		</div>
	</div>
</div>		
{% endblock %}